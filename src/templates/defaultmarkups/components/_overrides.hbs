{{!--
Remplace widget-title
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/1991/08/XML-renderer-widget-title.html
--}}
<b:includable id='widget-title'>
  <b:include name='@attr' data='{["id"],["data-version"]}'/>
  <b:class expr:name='data:widget.instanceId'/>
  {{!-- If sectionId is not "header" or title exists --}}
  <b:if cond='data:widget.sectionId != "header" and (data:defaultTitle or data:title.length != 0)'>
    {{!-- Title --}}
    <div class='widget-title'>
      <span class='widget-name'>
        {{!-- Show title or default title --}}
        <b:eval expr='data:defaultTitle ?: data:title'/>
      </span>
    </div>
  </b:if>
</b:includable>
{{!--
Remplace noContentPlaceholder
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/1992/07/XML-renderer-noContentPlaceholder.html
--}}
<b:includable id='noContentPlaceholder'>
  {{!-- If there are no posts, show a message --}}
  <b:if cond='data:posts.empty'>
    <div class="message">
      {{!-- If error, show a message --}}
      <b:if cond='data:view.isError'>
        <b:class name='error'/>
        <data:this.navMessage/>
        <b:else/>
        {{!-- If no error, show a message --}}
        <b:eval expr='data:view.search.query ? data:messages.noResultsFound : data:this.navMessage'/>
      </b:if>
    </div>
  </b:if>
</b:includable>
