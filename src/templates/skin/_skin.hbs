{{!--
Variables b:skin
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/2014/06/tag-b-skin-b-template-skin.html
--}}
<b:if cond="!data:view.isLayoutMode">
  {{!-- Skin (for Customization Mode) --}}
  <b:skin version='{{version}}'><![CDATA[
    /*!
      * Name      : {{name}}
      * Version   : {{version}}
      * License   : {{license}}
      *//*!

    Admin
    =====================
    {{> setting-admin}}

    General
    =====================
    {{> setting-general}}

    Translatable strings
    =====================
    {{> setting-text}}

    Customization
    =====================
    {{> Backgrounds}}
    {{> Color}}
    {{> Font}}
    {{> Hack}}

    Skin CSS variables
    =====================*/
    {{> css-variables}}

    /*
    All styles
    =====================*/
    {{asset '/dist/css/main.min.css'}}

    /*
    Your custom styles
    =====================*/
  ]]></b:skin>
<b:else/>
  {{!-- Template skin (for Layout Mode) --}}
  <b:template-skin><![CDATA[
    {{asset '~/blogger-admin-wp/main.min.css'}}
  ]]></b:template-skin>
</b:if>
